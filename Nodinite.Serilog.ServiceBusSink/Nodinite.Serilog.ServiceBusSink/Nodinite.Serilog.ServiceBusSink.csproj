<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageIconUrl>https://raw.githubusercontent.com/Nodinite/Nodinite.Serilog.ApiSink/master/artifacts/nodinite-favicon-192x192.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/Nodinite/Nodinite.Serilog.ServiceBusSink</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Nodinite/Nodinite.Serilog.ServiceBusSink</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/Nodinite/Nodinite.Serilog.ServiceBusSink/blob/master/LICENSE</PackageLicenseUrl>
    <Copyright>Nodinite</Copyright>
    <Description>Serilog Sink that pushes your log events to a Service Bus Queue.</Description>
    <Company>Nodinite (https://nodinite.com/)</Company>
    <Authors>Nodinite</Authors>
    <PackageTags>Nodinite</PackageTags>
    <Version>1.0.6</Version>
    <PackageReleaseNotes>Close the service bus connection after usage</PackageReleaseNotes>
    <Product>Nodinite.Serilog.ServiceBusSink</Product>
    <PackageId>Nodinite.Serilog.ServiceBusSink</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.ServiceBus" Version="4.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="Nodinite.Serilog.Models" Version="1.1.4" />
    <PackageReference Include="Serilog" Version="2.7.1" />
  </ItemGroup>

</Project>
